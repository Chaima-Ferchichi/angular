<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Fond du dialogue -->
        <item name="android:windowBackground">@drawable/dialog_background</item>

        <!-- Taille et alignement -->
        <item name="android:windowMinWidthMajor">90%</item> <!-- Largeur minimale à 90% pour les orientations portrait -->
        <item name="android:windowMinWidthMinor">90%</item> <!-- Largeur minimale à 90% pour les orientations paysage -->

        <!-- Autres personnalisations (facultatives) -->
        <item name="android:padding">16dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
