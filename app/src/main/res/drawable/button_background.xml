<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Couleur de fond interne du bouton (blanc) -->
    <solid android:color="@color/white" />

    <!-- Coins arrondis -->
    <corners android:radius="8dp" />

    <!-- Bordure (si vous en voulez une, sinon vous pouvez la retirer) -->
    <stroke
        android:width="1dp"
        android:color="@color/colorPrimary" />

    <!-- Padding autour du bouton -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>

